<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoSMSMarketing" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/MainBg</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AutoSMSMarketing.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AutoSMSMarketing.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AutoSMSMarketing.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- SPINNER THEME -->

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ic_baseline_arrow_downward_24</item>
        <item name="background">@drawable/ic_baseline_arrow_downward_24</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="color">@color/black</item>
    </style>
</resources>